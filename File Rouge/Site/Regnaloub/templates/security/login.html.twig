{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <style>
        footer {
            position: absolute; 
            bottom: 0;
            left: 0;
            right: 0;
        }
    </style>
<div id="connexion">
    <h1 class="formH1">Connexion</h1>
    
    <div id="formConnexion">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <label class="formLabel" for="inputEmail">Email</label>
            <input class="formInput100" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label class="formLabel" for="inputPassword">Mot de passe</label>
            <input class="formInput100" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="formBtn" type="submit">Se connecter</button>
        </form>
    </div>
</div>
{% endblock %}
