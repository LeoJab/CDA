{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>

    <div class="">

    {% set totalPanier = 0 %}

        {% for item in panier %}
            {% set totalArticle = item.produit.prix * item.quantite %}
            {% set totalPanier = totalPanier + totalArticle %}

            <div class="">
                <div class="">
                    <img src="{{ asset('assets/img/produits/') ~ item.produit.photo }}" alt="photo produit">
                    <h3>{{item.produit.lib}}</h3>
                    {{item.produit.description|u.truncate(60, '...')|raw}}
                </div>
                <div><a href="/add/{{item.produit.id}}">+</a> {{item.quantite}} <a href="/remove/{{item.produit.id}}">-</a></div>
                <p>{{ item.produit.prix }}€</p>
                <p>{{ item.produit.prix * item.quantite }}€</p>
                <p>{{ item.produit.prixHt }}€ HT</p>
                <p>{{ item.produit.prixHt * item.quantite }}€ HT</p>
            
            {% else %}
                Votre panier est vide
        {% endfor %}
            </div>
<br><br>
        
            <div>
                <p>Total Hors Taxe: {{ totalPanier }}€ HT</p>

            </div>
    </div>

{% endblock %}