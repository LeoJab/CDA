{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block pub %} <div id="publicite">Publicité</div> {% endblock %}

{% block body %}
    <h1 id="accueil_titre_prod">Dernières sorties</h1>
    <div id="produit">
        {% for produit in produits %}
            <div class="card_produit">
                <a href="{{ path('produit_detail', { sCateLib: produit.SousCategorie.lib, produitSlug: produit.slug }) }}">
                    <img src="{{ asset('assets/img/produits/') ~ produit.photo }}" alt="photo catégorie">
                    <div class="card_produit_lib_desc_btn">
                        <div class="card_produit_lib_desc">
                            <p>{{ produit.lib }}</p>
                            <p class="desc">{{ produit.description|u.truncate(80, '...') }}</p>
                            <div class="prix">
                                <p>{{ produit.prix }}€</p>
                                <p class="ht">{{ produit.prixht }}€HT</p>
                            </div>
                        </div>
                        <btn class="btn_panier">
                            Voir les details du produit
                            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-caret-right-fill" viewBox="0 0 16 16">
                            <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
                            </svg>
                        </btn>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>

    <div id="publicite">Publicité</div>

    <h1 id="accueil_titre_categorie">Nos différentes catégories</h1>
    <div id="accueil_categorie">
        {% for categorie in categories %}
            <div class="card_categorie">
                <a href="{{ path('categorie_detail', { categorie: categorie.id }) }}">
                    <img src="{{ categorie.photo }}" alt="">
                    <div class="card_categorie_lib_desc_btn">
                        <div class="card_categorie_lib_desc">
                            <p>{{ categorie.lib }}</p>
                        </div>
                        <btn class="btn_categorie" href="#">Visiter la categorie</btn>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
    <h1 id="accueil_titre_propos">À propos</h1>
    <div id="accueil_propos">
        <div id="accueil_horraire">
            <h2>Horraire d'ouverture</h2>
            <div id="horraire" class="card_propos">
                <ul id="jours_horraires">
                    <ul id="jours">
                        <li>Lundi</li>
                        <li>Mardi</li>
                        <li>Mercredi</li>
                        <li>Jeudi</li>
                        <li>Vendredi</li>
                        <li>Samedi</li>
                        <li>Dimanche</li>
                    </ul>
                    <ul id="horraires">
                        <li>9h - 18h</li>
                        <li>9h - 18h</li>
                        <li>9h - 18h</li>
                        <li>9h - 18h</li>
                        <li>9h - 18h</li>
                        <li>9h - 18h</li>
                        <li>Fermé</li>
                    </ul>
                </ul>
            </div>
        </div>
        <div id="map" class="card_propos">
            <h2>Où nous trouver ?</h2>
            <img src="{{ asset('/assets/img/map.png') }}" alt="Map magasin">
        </div>
        <div id="accueil_contact_titre">
            <h2>Nous contacter</h2>
            <div id="contact_accueil" class="card_propos">
                <div id="mail_tel">
                    <div id="mail">
                        <p>Mail:</p>
                        <p>regnaloub@gmail.com</p>
                    </div>
                    <div id="telephone">
                        <p>Téléphone:</p>
                        <p>09.52.12.35.62</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
