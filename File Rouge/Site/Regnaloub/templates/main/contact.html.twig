{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div id="formContact">
        {{ form_start(form) }}
            <div id="formContactErrors">
                {{ form_errors(form) }}
            </div>

            <div id="formContactInputLabel">
                {{ form_label(form.email, 'Adresse e-mail', {'attr': {'class':'formContactLabel'}}) }}
                {{ form_widget(form.email, {'attr': {'class':'formContactInput'}}) }}
                {{ form_errors(form.email, {'attr': {'class':'formContactErrors'}}) }}

                {{ form_label(form.objet, 'Objet du message', {'attr': {'class':'formContactLabel'}}) }}
                {{ form_widget(form.objet, {'attr': {'class':'formContactInput'}}) }}
                {{ form_errors(form.objet, {'attr': {'class':'formContactErrors'}}) }}

                {{ form_label(form.message, 'Votre message', {'attr': {'class':'formContactLabel'}}) }}
                {{ form_widget(form.message, {'attr': {'class':'formContactInput'}}) }}
                {{ form_errors(form.message, {'attr': {'class':'formContactErrors'}}) }}
            </div>

            <div id="formContactBtn">
                {{ form_row(form.envoyer) }}
            </div>

        {{ form_end(form) }}
    </div>
{% endblock %}