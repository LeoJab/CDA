{% extends 'base.html.twig' %}

{% block title %}Sous-Categorie{% endblock %}

{% block pub %}{% endblock %}

{% block body %}
    <div id="categorie_all">
        <h1 id="sCategorie_titre">{{ categorie.lib }}</h1>
        <p id="sCategorie_desc">{{ categorie.description }}</p>
        <div id="categorie">
            {% for souscate in categorie.sousCategories %}
                <div class="card_categorie">
                    <a href="{{ path('sCategorie_detail', { sCategorie: souscate.id }) }}">
                        <img src="{{ asset('assets/img/sCategories/') ~ souscate.photo }}" alt="">
                        <div class="card_categorie_lib_desc_btn">
                            <div class="card_categorie_lib_desc">
                                <p>{{ souscate.lib }}</p>
                                <p id="sCategorie_desc">{{ souscate.description|u.truncate(80, '...')  }}</p>
                            </div>
                            <btn class="btn_categorie">Visiter la sous categorie</btn>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}