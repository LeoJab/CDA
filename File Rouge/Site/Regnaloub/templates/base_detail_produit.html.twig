{% extends 'base.html.twig' %}

{% block title %}Detail Produit{% endblock %}

{% block pub %} {% endblock %}

{% block body %}
    <div id="page_detail">
        {% for detail_produit in produit %}
            <div class="produit_detail">
                <img src="{{ detail_produit.photo }}" alt="photo catégorie">
                <div class="produit_detail_lib_desc_btn">
                    <div class="produit_detail_lib_desc">
                        <p class="lib">{{ detail_produit.lib }}</p>
                        <p class="desc">{{ detail_produit.description }}</p>
                        <div class="prix">
                            <p>{{ detail_produit.prix }}€</p>
                            <p class="ht">{{ detail_produit.prixht }}€HT</p>
                        </div>
                    </div>
                    <btn class="prod_detail_btn_panier">
                        Ajouter au panier
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-bag-plus-fill" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M10.5 3.5a2.5 2.5 0 0 0-5 0V4h5zm1 0V4H15v10a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V4h3.5v-.5a3.5 3.5 0 1 1 7 0M8.5 8a.5.5 0 0 0-1 0v1.5H6a.5.5 0 0 0 0 1h1.5V12a.5.5 0 0 0 1 0v-1.5H10a.5.5 0 0 0 0-1H8.5z"/>
                        </svg>
                    </btn>
                </div>
            </div>
        {% endfor %}
        {% block caractéristique %}

        {% endblock %}
    </div>

{% endblock %}
