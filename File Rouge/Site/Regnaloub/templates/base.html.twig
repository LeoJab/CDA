            <link href="https://fonts.googleapis.com/css2?family=Raleway&display=swap" rel="stylesheet">
        {% endblock %}
    
    </head>
    
    
    <!-- Header -->
    <header>
        <div id="header_all">
            <div id="navbar">
                <img src="{{asset('/assets/img/icon.png')}}" alt="logo du site"><a href="#"></a></img>
                <ul>
                    <a href="{{ path('default') }}"><li>Accueil</li></a>
                    <a href="{{ path('categorie') }}"><li>Categorie</li></a>
                    <a href="{{ path('produit_all') }}"><li>Catalogue</li></a>
                    <a href="{{ path('contact') }}"><li>Contact</li></a>
                </ul>
                <form>
                    <button type="submit"><svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                        </svg>
                    </button>
                    <input type="search" placeholder="Recherche..">
                </form>
            </div>
            {% if app.user %}
            <div id="navbar_icon">
                <a href="#">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-cart2" viewBox="0 0 16 16">
                    <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l1.25 5h8.22l1.25-5zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0"/>
                    </svg>
                </a>
                <button id="icon_nav_user">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
                    </svg>
                </button>
            </div>

            <div class="menu_nav_uti none">
                <a href="#">Mon compte</a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="/admin">Dashboard</a>
                    <a href="#">Commandes</a>
                {% endif %}
                <a id="logout" href="/logout">Déconnexion</a>
            </div>
            {% else %}
            <div id="navbar_icon">
                <a href="/login" id="navbar_login">Connexion</a>
                <a id="register" href="/register" id="navbar_register">Inscription</a>
                <a id="icon_panier" href="#">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-cart2" viewBox="0 0 16 16">
                    <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l1.25 5h8.22l1.25-5zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0"/>
                    </svg>
                </a>
            </div>
            {% endif %}
        </div>
    </header>

    {% block javascripts %}
        <script src='/ASSETS/JS/main.js'></script>
    {% endblock %}

    <body>
        {% block pub %}{% endblock %}
        {% block body %}{% endblock %}
    </body>

